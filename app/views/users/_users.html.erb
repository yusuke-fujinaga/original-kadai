<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media" style="margin:3px;">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 70 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>