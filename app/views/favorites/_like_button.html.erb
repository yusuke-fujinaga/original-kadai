  <% if current_user.liking?(winepost) %>
    <%= form_with(model: current_user.favorites.find_by(winepost_id: winepost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :winepost_id, winepost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :winepost_id, winepost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>